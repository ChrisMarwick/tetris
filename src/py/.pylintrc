[MASTER]
ignore=.venv
disable=C0114,  # Missing module docstring
        C0116,  # Missing function docstring
        R0902,  # Too many instance attributes
        W0621,  # redefined-outer-name (this is how pytest works with fixtures)
        R0903   # too-few-public-methods (too annoying, I don't think there's an arbitrary minimum a class should have)

[FORMAT]
max-line-length=120